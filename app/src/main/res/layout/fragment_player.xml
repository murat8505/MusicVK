<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kramarenko.illia.musicvk.fragments.PlayerFragment"
    android:id="@+id/player_container"
    android:orientation="vertical"
    android:background="@color/background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/player_cont_big">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/smallTestText"
            android:layout_gravity="start" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@+id/player_cont_big"
        android:layout_centerHorizontal="true"
        android:id="@+id/player_cont_small"></FrameLayout>
</LinearLayout>
